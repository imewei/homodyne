# Homodyne Analysis Package - Distribution Manifest
# ================================================
# Updated: 2025-09-01 - Enhanced testing framework and improved virtual environment support

# Core documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CLI_REFERENCE.md
include API_REFERENCE.md
include PRE_COMMIT_SETUP.md
include SECURITY.md
# Additional documentation files (v0.7.2)
include GPU_SETUP.md
include INSTALL_UNINSTALL.md
include ADVANCED_FEATURES.md

# Build configuration
include pyproject.toml
include Makefile
include requirements*.txt

# Type stubs for third-party libraries
recursive-include homodyne/typings *.pyi

# Configuration templates and data files
recursive-include homodyne *.json
recursive-include homodyne/templates *.json

# Post-installation and setup system (unified architecture)
include homodyne/post_install.py
include homodyne/uninstall_scripts.py

# GPU and system optimization modules (v0.7.2)
include homodyne/gpu_wrapper.py
include homodyne/gpu_optimizer.py
include homodyne/system_validator.py

# Runtime module with enhanced GPU support
recursive-include homodyne/runtime *.py
recursive-include homodyne/runtime *.sh

# Advanced completion system (v0.7.2)
include homodyne/completion_advanced.sh
include homodyne/gpu_activation_smart.sh

# Legacy scripts directory (if exists)
recursive-include scripts *.py
recursive-include scripts *.md

# Include documentation files
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt
recursive-include docs *.py
include docs/Makefile
include docs/make.bat
recursive-include docs/dev *.md

# Exclude test files from the package
recursive-exclude homodyne/tests *
recursive-exclude tests *

# Exclude development and build files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
exclude .DS_Store

# Exclude version control and CI files
recursive-exclude .git *
exclude .gitignore
exclude .github

# Exclude development cache and build directories
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
recursive-exclude .ruff_cache *
recursive-exclude *.egg-info *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude .tox *
recursive-exclude .venv *
exclude .benchmarks
exclude homodyne/.benchmarks

# Exclude coverage and test artifacts
exclude .coverage
exclude htmlcov
exclude .pytest_cache
exclude pytest.ini
exclude tox.ini

# Include pre-commit configuration for users who want to contribute
include .pre-commit-config.yaml

# Exclude development configuration files
exclude .claude
exclude benchmark_performance.py
exclude my_config*.json
exclude WARP.md
exclude bandit_report.json
exclude bandit-report.json
exclude code_quality_report.md
exclude pip_audit_report.json
exclude .bandit
exclude .security

# Exclude editor and IDE files
exclude .vscode
exclude .idea
exclude *.swp
exclude *.swo
exclude *~
