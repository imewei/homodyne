# homodyne-analysis - Distribution Manifest
# Updated: 2025-09-03
# Includes isolated MCMC backend architecture

# Core documentation
include README.md
include README.rst
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include AUTHORS.md
include HISTORY.md

# Build configuration
include pyproject.toml
include setup.py
include setup.cfg
include Makefile
include requirements*.txt
include pytest.ini
include pytest-*.ini
include tox.ini

# Include source code and data
recursive-include homodyne *.py
recursive-include homodyne *.pyi
recursive-include homodyne *.json
recursive-include homodyne *.yaml
recursive-include homodyne *.yml
recursive-include homodyne *.txt
recursive-include homodyne *.md
recursive-include homodyne *.sh

# Explicitly include isolated MCMC backend files
include homodyne/optimization/mcmc_cpu_backend.py
include homodyne/optimization/mcmc_gpu_backend.py

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt
recursive-include docs *.py
include docs/Makefile
include docs/make.bat

# Include tests (optional - comment out if you don't want tests in distribution)
# recursive-include tests *.py
# recursive-include homodyne/tests *.py
# recursive-include homodyne/tests *.json
# recursive-include homodyne/tests *.npz

# Exclude development and build files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
exclude .DS_Store

# Exclude version control and CI files
recursive-exclude .git *
exclude .gitignore
exclude .github

# Exclude development cache and build directories
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
recursive-exclude .ruff_cache *
recursive-exclude *.egg-info *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude .tox *
recursive-exclude .venv *

# Exclude coverage and test artifacts
exclude .coverage
exclude htmlcov
exclude .pytest_cache

# Include development configuration for contributors
include .pre-commit-config.yaml

# Exclude editor and IDE files
exclude .vscode
exclude .idea
exclude *.swp
exclude *.swo
exclude *~
