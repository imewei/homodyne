# Include the README and other documentation
# Updated for v0.7.1+ with improved code quality, testing infrastructure, conda integration, and simplified shell completion
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CLI_REFERENCE.md
include API_REFERENCE.md
include PRE_COMMIT_SETUP.md
include SECURITY.md
include GPU_SETUP.md
include INSTALL_UNINSTALL.md
include pyproject.toml
include Makefile
include requirements*.txt
include activate_gpu.sh
include standalone_cleanup.sh

# Include type stubs for third-party libraries
recursive-include homodyne/typings *.pyi

# Include configuration templates and data files
recursive-include homodyne *.json
recursive-include homodyne/templates *.json

# Include shell completion scripts - simplified auto-configuration system
recursive-include homodyne cli_completion.py
include homodyne/uninstall_scripts.py

# Include GPU setup and installation scripts - system CUDA support and conda integration
recursive-include scripts *.py
include homodyne/post_install.py
include homodyne/gpu_wrapper.py
include homodyne/uninstall_scripts.py

# Include documentation files
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt
recursive-include docs *.py
include docs/Makefile
include docs/make.bat
recursive-include docs/dev *.md

# Exclude test files from the package
recursive-exclude homodyne/tests *
recursive-exclude tests *

# Exclude development and build files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
exclude .DS_Store

# Exclude version control and CI files
recursive-exclude .git *
exclude .gitignore
exclude .github

# Exclude development cache and build directories
recursive-exclude .pytest_cache *
recursive-exclude .mypy_cache *
recursive-exclude .ruff_cache *
recursive-exclude *.egg-info *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude .tox *
recursive-exclude .venv *
exclude .benchmarks
exclude homodyne/.benchmarks

# Exclude coverage and test artifacts
exclude .coverage
exclude htmlcov
exclude .pytest_cache
exclude pytest.ini
exclude tox.ini

# Include pre-commit configuration for users who want to contribute
include .pre-commit-config.yaml

# Exclude development configuration files
exclude .claude
exclude benchmark_performance.py
exclude my_config*.json
exclude WARP.md
exclude bandit_report.json
exclude .bandit
exclude .security

# Exclude editor and IDE files
exclude .vscode
exclude .idea
exclude *.swp
exclude *.swo
exclude *~
