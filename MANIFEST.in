# homodyne-analysis - Distribution Manifest
# Simplified and optimized version
# Updated: 2025-01-07

# Essential documentation
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Test configuration files
include pytest-*.ini

# Package data files
recursive-include homodyne *.py *.pyi *.json *.sh
recursive-include homodyne/runtime *

# Requirements files (only existing ones)
include requirements.txt
include requirements-dev.txt

# Documentation source (for source distributions)
recursive-include docs *.rst *.md Makefile

# Exclude build artifacts and caches
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp *.swo *~

# Exclude version control and CI
prune .git
prune .github
prune .tox
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune build
prune dist
prune *.egg-info
prune htmlcov
prune .venv