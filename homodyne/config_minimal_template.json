{
  "_template_info": {
    "name": "Minimal Homodyne Configuration Template",
    "description": "Essential settings only - copy and customize for your experiment",
    "usage": "Fill in the values marked with 'YOUR_*' placeholders",
    "full_template": "See config_template.json for complete options and documentation"
  },

  "metadata": {
    "config_version": "5.1",
    "description": "YOUR_EXPERIMENT_DESCRIPTION",
    "created_date": "YYYY-MM-DD",
    "authors": ["YOUR_NAME"],
    "institution": "YOUR_INSTITUTION"
  },

  "experimental_data": {
    "data_folder_path": "./data/YOUR_SAMPLE_NAME/",
    "data_file_name": "YOUR_DATA_FILE.hdf",
    "phi_angles_path": "./data/phi_angles/", 
    "phi_angles_file": "phi_list.txt"
  },

  "analyzer_parameters": {
    "temporal": {
      "dt": 0.1,
      "start_frame": 1001,
      "end_frame": 2000
    },
    "scattering": {
      "wavevector_q": 0.0054
    },
    "geometry": {
      "stator_rotor_gap": 2000000,
      "gap_in_microns": 200
    }
  },

  "analysis_settings": {
    "static_mode": false,
    "_comment": "Set static_mode to true for static (no-flow) analysis where γ̇=0, β=0, γ̇_offset=0, φ₀=0"
  },

  "initial_parameters": {
    "values": [
      23312.0,
      -0.8,
      1070.0,
      0.0006,
      -0.4,
      -0.00005,
      1.0
    ],
    "parameter_names": [
      "D0",
      "alpha",
      "D_offset", 
      "gamma_dot_t0",
      "beta",
      "gamma_dot_t_offset",
      "phi0"
    ]
  },

  "optimization_config": {
    "classical_optimization": {
      "methods": ["Nelder-Mead"]
    },
    "bayesian_optimization": {
      "enabled": true,
      "n_calls": 200
    },
    "mcmc_sampling": {
      "enabled": true,
      "draws": 5000,
      "chains": 4
    }
  },

  "parameter_space": {
    "bounds": [
      {"name": "D0", "min": 1e-3, "max": 1e6},
      {"name": "alpha", "min": -2.0, "max": 2.0},
      {"name": "D_offset", "min": -5000, "max": 5000},
      {"name": "gamma_dot_t0", "min": 1e-6, "max": 1.0},
      {"name": "beta", "min": -2.0, "max": 2.0},
      {"name": "gamma_dot_t_offset", "min": -0.1, "max": 0.1},
      {"name": "phi0", "min": -15.0, "max": 15.0}
    ]
  }
}