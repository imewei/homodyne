{
  "metadata": {
    "config_version": "6.0",
    "description": "Test Configuration for Results File Path",
    "analysis_mode": "static_isotropic"
  },

  "experimental_data": {
    "data_folder_path": "./data/Simon/",
    "data_file_name": "dummy.hdf",
    "phi_angles_path": "./data/phi_angles/",
    "phi_angles_file": "phi_list.txt",
    "exchange_key": "exchange",
    "cache_file_path": "./data/Simon/",
    "cache_filename_template": "cached_c2_isotropic_frames_{start_frame}_{end_frame}.npz",
    "cache_compression": true,
    "data_type": "float64",
    "file_format": "NPZ",
    "preprocessing": {
      "apply_diagonal_correction": true,
      "vectorized_correction": true,
      "cache_processed_data": true,
      "normalize_data": true,
      "normalization_method": "baseline"
    }
  },

  "analyzer_parameters": {
    "temporal": {
      "dt": 0.1,
      "dt_unit": "seconds",
      "start_frame": 400,
      "end_frame": 1000
    },
    
    "scattering": {
      "wavevector_q": 0.0054,
      "q_unit": "Å⁻¹"
    },
    
    "geometry": {
      "stator_rotor_gap": 2000000,
      "gap_unit": "Å"
    },
    
    "computational": {
      "num_threads": 8,
      "auto_detect_cores": true,
      "max_threads_limit": 16,
      "memory_limit_gb": 8
    }
  },

  "initial_parameters": {
    "values": [1324.1, -0.014, -0.674361, 0.0, 0.0, 0.0, 0.0],
    "parameter_names": ["D0", "alpha", "D_offset", "gamma_dot_t0", "beta", "gamma_dot_t_offset", "phi0"],
    "units": ["Å²/s", "dimensionless", "Å²/s", "s⁻¹", "dimensionless", "s⁻¹", "degrees"]
  },

  "optimization_config": {
    "angle_filtering": {
      "enabled": false,
      "target_ranges": [],
      "fallback_to_all_angles": true
    },
    
    "classical_optimization": {
      "methods": ["Nelder-Mead"],
      "method_options": {
        "Nelder-Mead": {
          "maxiter": 1000,
          "xatol": 1e-6,
          "fatol": 1e-6,
          "adaptive": true
        }
      }
    }
  },

  "parameter_space": {
    "bounds": [
      {"name": "D0", "min": 1e-3, "max": 1e6, "type": "log-uniform", "prior_mu": 4.6, "prior_sigma": 0.5, "unit": "Å²/s", "physical_constraint": "positive"},
      {"name": "alpha", "min": -2.0, "max": 2.0, "type": "uniform", "prior_mu": 0.0, "prior_sigma": 0.5, "unit": "dimensionless", "physical_constraint": "none"},
      {"name": "D_offset", "min": -5000, "max": 5000, "type": "uniform", "prior_mu": 0.0, "prior_sigma": 500.0, "unit": "Å²/s", "physical_constraint": "none"},
      {"name": "gamma_dot_t0", "min": 0.0, "max": 0.0, "type": "fixed", "unit": "s⁻¹", "physical_constraint": "fixed_zero"},
      {"name": "beta", "min": 0.0, "max": 0.0, "type": "fixed", "unit": "dimensionless", "physical_constraint": "fixed_zero"},
      {"name": "gamma_dot_t_offset", "min": 0.0, "max": 0.0, "type": "fixed", "unit": "s⁻¹", "physical_constraint": "fixed_zero"},
      {"name": "phi0", "min": 0.0, "max": 0.0, "type": "fixed", "unit": "degrees", "physical_constraint": "fixed_zero"}
    ]
  },

  "analysis_settings": {
    "static_mode": true,
    "static_submode": "isotropic"
  },

  "workflow_integration": {
    "analysis_workflow": {
      "plot_experimental_data_on_load": false
    }
  },

  "advanced_settings": {
    "data_loading": {
      "use_diagonal_correction": true,
      "vectorized_diagonal_fix": true
    },
    
    "chi_squared_calculation": {
      "method": "standard", 
      "uncertainty_estimation_factor": 0.1,
      "minimum_sigma": 1e-10,
      "fast_computation": true,
      
      "validity_check": {
        "check_positive_D0": true,
        "check_positive_gamma_dot_t0": false,
        "check_positive_time_dependent": true,
        "check_parameter_bounds": true
      }
    }
  },

  "performance_settings": {
    "caching": {
      "enable_memory_cache": true,
      "enable_disk_cache": true,
      "cache_size_limit_mb": 1000,
      "auto_cleanup": true
    },
    
    "parallel_processing": {
      "enable_multiprocessing": true,
      "chunk_size": "auto",
      "backend": "threading"
    },
    
    "noise_model": {
      "use_simple_forward_model": true,
      "sigma_prior": 0.1
    }
  },

  "output_settings": {
    "reporting": {
      "generate_plots": true,
      "plot_formats": ["png"],
      "detailed_summary": true
    },
    
    "plotting": {
      "general": {
        "create_plots": true,
        "plot_format": "png",
        "dpi": 300,
        "figure_size": [10, 8],
        "style": "publication"
      }
    }
  }
}